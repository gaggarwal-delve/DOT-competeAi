// CompeteAI Prisma Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("postgres_DATABASE_URL")
  directUrl = env("postgres_DATABASE_URL_UNPOOLED")
}

model Company {
  id               Int       @id @default(autoincrement())
  name             String    @unique
  slug             String    @unique
  headquarters     String?
  website          String?
  therapyAreas     String[]
  
  trials           ClinicalTrial[]
  newsItems        NewsItem[]
  indications      IndicationCompany[]  // V2: Link to indications
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  @@index([name])
}

model ClinicalTrial {
  id                  Int       @id @default(autoincrement())
  nctId               String    @unique
  title               String    @db.Text
  
  companyId           Int?
  company             Company?  @relation(fields: [companyId], references: [id])
  sponsorName         String?
  
  phase               String?
  status              String
  
  conditions          String[]
  interventions       String[]
  
  startDate           DateTime?
  completionDate      DateTime?
  
  enrollmentCount     Int?
  studyType           String?
  locations           String[]
  
  briefSummary        String?   @db.Text
  url                 String?
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  @@index([nctId])
  @@index([companyId])
  @@index([status])
}

model NewsItem {
  id              Int       @id @default(autoincrement())
  title           String    @db.Text
  summary         String?   @db.Text
  
  source          String
  sourceUrl       String?   @unique
  
  category        String
  
  companyId       Int?
  company         Company?  @relation(fields: [companyId], references: [id])
  
  publishedDate   DateTime
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([category])
  @@index([publishedDate])
}

// V2: Indication-First Models
model Indication {
  id                  Int       @id @default(autoincrement())
  name                String    @unique
  slug                String    @unique
  category            String    // Therapeutic Area (TA)
  description         String?   @db.Text
  
  // Report types available (from universal table)
  hasMarketInsight    Boolean   @default(false)
  hasDrugInsight      Boolean   @default(false)
  hasEpidemInsight    Boolean   @default(false)
  mostRecentYear      Int?
  yearRange           String?
  totalReports        Int       @default(0)
  
  // Aggregated metrics (calculated from live data)
  totalTrials         Int       @default(0)
  activeTrials        Int       @default(0)
  companiesCount      Int       @default(0)
  
  // Market data (optional)
  marketSize          Float?
  growthRate          Float?
  
  // Relations
  trials              IndicationTrial[]
  companies           IndicationCompany[]
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  @@index([slug])
  @@index([category])
  @@index([name])
  @@index([hasMarketInsight])
  @@index([hasDrugInsight])
  @@index([hasEpidemInsight])
}

// Many-to-many: Indication <-> Clinical Trial
model IndicationTrial {
  id              Int            @id @default(autoincrement())
  
  indicationId    Int
  indication      Indication     @relation(fields: [indicationId], references: [id], onDelete: Cascade)
  
  trialNctId      String
  
  isPrimary       Boolean        @default(true)  // Primary vs secondary indication
  
  createdAt       DateTime       @default(now())
  
  @@unique([indicationId, trialNctId])
  @@index([indicationId])
  @@index([trialNctId])
}

// Many-to-many: Indication <-> Company (with metrics)
model IndicationCompany {
  id                 Int         @id @default(autoincrement())
  
  indicationId       Int
  indication         Indication  @relation(fields: [indicationId], references: [id], onDelete: Cascade)
  
  companyId          Int
  company            Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Aggregated metrics
  trialsCount        Int         @default(0)
  phases             String[]    // ["Phase 2", "Phase 3"]
  pipelineStrength   Float?      // Calculated score
  
  updatedAt          DateTime    @updatedAt
  
  @@unique([indicationId, companyId])
  @@index([indicationId])
  @@index([companyId])
}

